{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "isolatedModules": true
  },
  "include": ["resources/**/*.ts", "resources/**/*.vue", "resources/**/*.d.ts", "resources/**/*.tsx"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
